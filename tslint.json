{
  "extends": ["tslint:recommended", "tslint-config-prettier", "tslint-eslint-rules"],
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "ban": [true, { "name": "alert", "message": "Please do not include alert messages within the code." }],
    "curly": [true, "ignore-same-line"],
    "deprecation": {
      "severity": "warning"
    },
    "import-blacklist": [true, "rxjs/Rx", "lodash", "moment", "moment-timezone", "underscore"],
    "indent": [true, "spaces"],
    "interface-name": false,
    "jsdoc-format": [true, "check-multiline-start"],
    "max-classes-per-file": false,
    "max-line-length": [true, 140],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": ["static-field", "instance-field", "static-method", "instance-method"]
      }
    ],
    "no-consecutive-blank-lines": [true, 2],
    "no-console": [true, "log", "time", "timeEnd", "trace"],
    "no-empty": false,
    "no-inferrable-types": [true, "ignore-params"],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "quotemark": [true, "single", "avoid-escape"],
    "radix": false,
    "semicolon": [true, "always"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "never"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "triple-equals": [true],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "variable-name": {
      "options": ["allow-leading-underscore", "allow-pascal-case", "check-format", "ban-keywords"]
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type"
    ],
    "brace-style": [true, "1tbs", { "allowSingleLine": true }],
    "no-multi-spaces": [true],
    "ter-func-call-spacing": [true, "never"],
    "ter-indent": [true, 2, { "SwitchCase": 1 }],
    "space-in-parens": [true, "never"],
    "valid-jsdoc": [
      true,
      {
        "prefer": {
          "return": "returns"
        },
        "requireParamDescription": true,
        "requireReturnDescription": true
      }
    ]
  }
}
